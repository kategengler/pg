<div class="row">
    <div class="small-12 columns">
        <h1>{{gallery.title}}</h1>
    </div>
</div>
<div class="row">
    <div class="small-12 columns">
        <ul class="breadcrumbs">
            <li>{{#linkTo "galleries.index"}}Galleries{{/linkTo}}</li>
            <li>{{#linkTo "galleries.show" gallery}}{{gallery.title}}{{/linkTo}}</li>
        </ul>
    </div>
</div>
<div class="row">
    <div class="small-9 columns">
        <a {{bindAttr href="originalSrc"}}>
            <img class="th" {{bindAttr src="originalSrc"}}>
        </a>
        <span class="byline">{{byline}}</span>
    </div>
    <div class="small-3 columns">
        <div class="panel">
          <h6>Description</h6>
          <p>{{description}}</p>
        </div>
    </div>
</div>