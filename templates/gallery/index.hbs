<div class="row">
    <div class="small-12 small-centered columns">
        <h1>Katie's Photos</h1>
    </div>
</div>
<div class="row">
    <div class="small-10 columns">
        <ul class="breadcrumbs">
            <li>{{#linkTo "gallery.index"}}Galleries{{/linkTo}}</li>
        </ul>
    </div>
    <div class="small-2 columns">
        {{# linkTo "gallery.new" }}Add a gallery{{/linkTo}}
    </div>
</div>
<div class="row">
    <div class="small-12 small-centered columns">
        <ul class="large-block-grid-5">
          {{#each gallery in controller}}
              <li>
                {{gallery.title}}

              </li>
          {{/each}}
        </ul>
    </div>
</div>