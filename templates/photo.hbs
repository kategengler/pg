<div class="row">
    <div class="small-12 columns">
        <h1>{{gallery.title}}</h1>
    </div>
</div>
<div class="row">
    <div class="small-12 columns">
        <ul class="breadcrumbs">
            <li>{{#linkTo "galleries.index"}}Galleries{{/linkTo}}</li>
            <li>{{#linkTo "galleries.show" gallery}}{{gallery.title}}{{/linkTo}}</li>
        </ul>
    </div>
</div>
<div class="row">
    <div class="small-9 columns">
        <a {{bindAttr href="originalSrc"}}>
            <img class="th" {{bindAttr src="originalSrc"}}>
        </a>
        {{#if isEditing}}
          {{input value=byline class="byline"}}
        {{else}}
          <span class="byline">{{byline}}</span>
        {{/if}}
    </div>
    <div class="small-3 columns">
        <div class="panel">
          <h6>Description</h6>
          {{#if isEditing}}
            {{input type="textarea" value=description}}
            <button {{action "doneEditing"}}>Done</button>
          {{else}}
            <p>{{description}}</p>
            <button {{action "edit"}}>Edit</button>
          {{/if}}
        </div>
    </div>
</div>